<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddPostActivity">

    <ImageView
            android:layout_width="265dp"
            android:layout_height="162dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imgAlter"
            tools:layout_editor_absoluteY="105dp" tools:layout_editor_absoluteX="67dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="452dp"/>
    <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:hint="Description"
            android:lines="5"
            android:maxLines="5"
            android:background="@color/white"
            android:paddingLeft="10dp"/>
    <EditText
            android:layout_width="303dp"
            android:layout_height="76dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2" tools:layout_editor_absoluteY="315dp"
            tools:layout_editor_absoluteX="51dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button" tools:layout_editor_absoluteY="638dp"
            tools:layout_editor_absoluteX="131dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>